<% var rootpath = '../' %>

<head>
    <%- include(rootpath + 'partials/head'); %>
</head>
<body>
<%- include(rootpath + 'partials/menu'); %>
<div class="pages">
    <p class="titre_pages">Blog</p>

    <div class="container">
        <% posts.forEach(function(post) { %>

                <div class="row Panneau_Pale Blog_Post">
                    <div class="col-4">
                        <img class="Blog_Post_Image" src=<%= post.featured_image %>>
                    </div>
                    <div class="col-6">
                        <p class="Blog_Post_Titre"><%= post.title %></p>
                        <p class="Blog_Date">
                            Publié le <%= post.published.slice(8, 10) %>
                            <% if (post.published.slice(5, 7) == '1') { %>
                                janvier
                            <% } else if (post.published.slice(5, 7) == '2') {%>
                                février
                            <% } else if (post.published.slice(5, 7) == '3') {%>
                                mars
                            <% } else if (post.published.slice(5, 7) == '4') {%>
                                avril
                            <% } else if (post.published.slice(5, 7) == '5') {%>
                                mai
                            <% } else if (post.published.slice(5, 7) == '6') {%>
                                juin
                            <% } else if (post.published.slice(5, 7) == '7') {%>
                                juillet
                            <% } else if (post.published.slice(5, 7) == '8') {%>
                                août
                            <% } else if (post.published.slice(5, 7) == '9') {%>
                                septembre
                            <% } else if (post.published.slice(5, 7) == '10') {%>
                                octobre
                            <% } else if (post.published.slice(5, 7) == '11') {%>
                                novembre
                            <% } else if (post.published.slice(5, 7) == '12') {%>
                                décembre
                            <% } %>
                            <%= post.published.slice(0, 4) %>
                        </p>
                        <p><%= post.summary %></p>
                    </div>
                    <div class="col-2">
                        <a  href="/blog/<%= post.slug %>">Lire la suite</a>
                    </div>
                </div>
        <% }); %>
        <% if (previous_page) { %>
            <a href="/blog/p/<%= previous_page %>">Prev</a>
        <% } %>

        <% if (next_page) { %>
            <a href="/blog/p/<%= next_page %>">Next</a>
        <% } %>
    </div>
</div>
<%- include(rootpath + 'partials/footer'); %>
</body>
<%- include(rootpath + 'partials/script'); %>
</html>